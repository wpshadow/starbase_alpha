FUNCTION lvl_generate_level:
LOCAL m AS lvl_ground_type

	FOR tmp_x = 0 TO lvl_generator.size_x - 1
		FOR tmp_y = 0 TO lvl_generator.size_y - 1
			
			m.id = image[ground_sprite[0].id].id$
			m.x = tmp_x * 32
			m.y = tmp_y * 32
			
			DIMPUSH lvl_ground[], m
			
			
		NEXT
	NEXT

ENDFUNCTION